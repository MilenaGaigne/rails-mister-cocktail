<h1><%=@cocktail.name%></h1>
<%= cl_image_tag(@cocktail.photo, height: 300, width: 400, crop: :fill) %>
<% @cocktail.doses.each do |dose|%>
<li><%= dose %><%= dose.description %> - <%= dose.ingredient.name %></li>

  <%= link_to "Supprimer un ingredient", dose_path(dose.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>


<div> <%= link_to "+Ajouter des ingrédients", new_cocktail_dose_path(@cocktail) %>
</div>


<div> <%= link_to "Retourner à la liste des cocktails", cocktails_path %>
</div>
